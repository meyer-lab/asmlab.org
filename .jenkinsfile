pipeline {
  agent any
  environment {
    PATH = "/bin:/usr/sbin:/usr/bin:/usr/local/bin:/usr/local/texlive/2017/bin/x86_64-darwin/:$HOME/.gem/bin"
    LC_ALL = "en_US.UTF-8"
  }
  stages {
    stage('Setup') {
      steps {
        sh 'git status'
        sh 'bundle install --path ~/.gem'
      }
    }
    stage('Build') {
      steps {
        sh 'bundle exec jekyll build'
      }
    }
    stage('Test'){
      steps {
        sh 'bundle exec htmlproofer --check-html --http-status-ignore "412" --timeframe 24w --assume-extension ./_site'
      }
    }
    stage('Deploy') {
      when { expression { env.BRANCH_NAME == 'master' } }
      steps {
        sh 'cd _site; git init; git config user.name "Jenkins CI"; git config user.email "jenkins@asmlab.org"'
        sh 'cd _site; git remote add upstream "git@github.com:meyer-lab/asmlab.org.git"'
        sh 'echo "asmlab.org" > _site/CNAME'
        sh 'cd _site; git add .; git commit -m "Jenkins $BUILD_ID auto-pushed"; git push --force -q upstream HEAD:gh-pages'
      }
    }
  }
}
