pipeline {
  agent any
  environment {
    PATH = "/bin:/usr/sbin:/usr/bin:/usr/local/bin:/usr/local/texlive/2017/bin/x86_64-darwin/:$HOME/.gem/bin"
  }
  stages {
    stage('Build') {
      steps {
        sh 'bundle install --path ~/.gem'
        sh 'bundle exec jekyll build'
      }
    }
    stage('Test'){
      steps {
        sh 'bundle exec htmlproofer --check-html --assume-extension ./_site'
        }
      }
    stage('Deploy') {
      when {
        expression { env.BRANCH_NAME == 'master' }
      }
      steps {
        sh './scripts/deploy.sh'
      }
    }
  }
}
